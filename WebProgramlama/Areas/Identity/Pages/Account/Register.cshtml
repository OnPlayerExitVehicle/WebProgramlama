@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr style="color: white" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <label asp-for="Input.Ad" class="form-label" style="color: white"></label>
                <input asp-for="Input.Ad" class="form-control" />
                <span asp-validation-for="Input.Ad" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Soyad" class="form-label" style="color: white"></label>
                <input asp-for="Input.Soyad" class="form-control" />
                <span asp-validation-for="Input.Soyad" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Email" class="form-label" style="color: white"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Password" class="form-label" style="color: white"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.ConfirmPassword" class="form-label" style="color: white"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
